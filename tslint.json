{
  "extends": "tslint-config-airbnb",
  "rules": {
    "indent": [true, "spaces", 4],
    "ter-indent": [4, "spaces"],
    "align": false,
    "variable-name": ["allow-leading-underscore"],
    "function-name": ["allow-leading-underscore"],
    "naming-convention": [true,
      {"type": "member", "modifiers": "private", "prefix": "_"},
      {"type": "method", "modifiers": "private", "prefix": "_"},
      {"type": "interface", "prefix": "I"}
    ],
    "whitespace": [true, "check-type", "check-typecast"],
    "max-line-length": false

  }

}